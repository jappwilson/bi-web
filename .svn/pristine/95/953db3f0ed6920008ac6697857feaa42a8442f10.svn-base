#createPanel(hidden).panel
	h1 Create Bond
	hr

	#innerWrap
		span.fa.fa-file-text-o(style="font-size: 250px; float:left;")
		
		form(action="/create" method="POST")#createform
			legend 
				input(type="text" name="issuer" placeholder="Issuer Name")
				span.hint ISSUER NAME
			legend 
				input(type="text" name="bondName" placeholder="Enter Bond Name")
				span.hint BOND NAME
			legend 
				select(name="principal")
					option(value="100000") $100,000
					option(value="1000000") $1,000,000
					option(value="10000000") $10,000,000
				span.hint PRINCIPAL AMOUNT
			legend 
				input(type="text" name="cusip" placeholder="IDENTIFIER" disabled)
				span.hint IDENTIFIER
			legend 
				input(type="text" name="rate" placeholder="Rate")
				span.hint INTEREST RATE
			legend
				input(type='text', name='mdate', placeholder="Maturity Date") 
				<!--select(name="maturity")
					option(value="15") 15 days
					option(value="30") 30 days
					option(value="90") 90 days-->
				span.hint MATURITY DATE
			

			legend
				button(type="button" style="margin:5px;")#submit
					span.fa.fa-check &nbsp;&nbsp;
					span CREATE
				